<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="google_analytics_checkbox"
        android:title="@string/pref_title_google_analytics"
        android:summary="@string/pref_description_google_analytics"
        android:defaultValue="false" />

    <EditTextPreference
        android:key="projectiler_url_text"
        android:title="@string/pref_title_projectile_url"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
